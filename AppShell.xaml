<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Academic_Tracker_Mobile_Development.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Academic_Tracker_Mobile_Development"
    xmlns:local2="clr-namespace:Academic_Tracker_Mobile_Development.Views"
    Title="Academic_Tracker_Mobile_Development"
    Shell.FlyoutBehavior="Flyout">


    <ShellContent

        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <FlyoutItem Title="Terms">
        <ShellContent ContentTemplate="{DataTemplate local2:Terms}" />
    </FlyoutItem>

    <FlyoutItem Title="Reports">
        <ShellContent ContentTemplate="{DataTemplate local2:Reports}" />
    </FlyoutItem>

</Shell>S